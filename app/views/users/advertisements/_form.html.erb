<%= form_for [:users, @advertisement], html: { multipart: true } do |f| %>
<div class="form-group">
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
	<%= f.label :body %>
	<%= f.text_area :body, class: 'form-control'  %>
</div>
<div class="form-group">
	<%= f.label :category_id %>
	<%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true }, class: 'form-control'  %>
</div>
<div class="form-group">
	<%= f.file_field :image  %>
</div>
<div class="form-group">
	<%= f.submit 'Сохранить', class: 'btn btn-primary'  %>
	<%= link_to 'Назад', :back, class: 'btn btn-outline-secondary'  %>
</div>
<% end %>