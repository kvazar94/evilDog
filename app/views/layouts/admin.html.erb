<!DOCTYPE html>
<html>
<head>
  <title>EvilDogAdmin</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="container">



      <ul class="navbar-nav  pull-xs-top">

        <% if user_signed_in? && current_user.admin? %>
        <li class="nav-item">
          <%= link_to "Редактор категорий", admin_categories_url, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Редактор пользовтелей", admin_users_path, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Очередь объявлений", admin_advertisements_path, class: "nav-link"%>
        </li>
        <% end%>
        <% if user_signed_in? && !current_user.admin? %>
        <li class="nav-item">
          <%#= button_to "Мой профиль", user_path %>

          <%= link_to "Добавить объявление", new_advertisement_path, method: :create, class: "nav-link" %>
          <% end %> 
          
        </li>   

       

      </nav>




    </div> 
    <div class="container main">


      <div class="row">
        <div class="col-md-12">

          <% flash.each do |name, message| %>
          <div class="alert alert-<%= bootstrap_class_for(name) %>">
            <button class="close" data-dismiss="alert">&times;</button>
            <%= message %>
          </div>
          <% end %>

        </div>

      </div>



      <div class="row">
        <div class="col-md-8">

         <%= yield %>
       </div>
   

    </div>

  </div>
</body>
</html>
