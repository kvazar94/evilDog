<article class="advertisement">
	<section class="advertisement-head"> 
		<h2> <%= link_to advertisement.title, advertisement_path(advertisement) %> </h2>

		<small>
			
			<time>
				<%= advertisement.created_at.to_date.strftime( "%e %B %Y %H:%M:%S" ) %>

			</time>
			
			<% if advertisement.category.present? %>
			|
			<%= link_to advertisement.category.name, advertisement.category%>
			<% end %>
			<% if user_signed_in?%>

			|
			<%= link_to 'Уничтожить', advertisement_path(advertisement), method: :delete, data: { confirm: 'Вы уверены?' } %>
			<% end %>
		</small>
	</section>
	
	
	<section class="advertisement-body clearfix">
		<%= image_tag advertisement.image.url(:thumb), class: 'img-thumbnail thumb' if advertisement.image?%>
		<%= advertisement.body %>
	</section>


	
</article>