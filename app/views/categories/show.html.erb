<%= render 'shared/breadcrumb', category: @category %>
<h1> <%= @category.name %></h1>
<section id="advertisements">
	<div>
  <%= search_form_for @q do |f| %>
  <%= f.search_field :title_or_body_cont %>
  <%= f.submit :искать %>
  <% end %>
  <%= sort_link(@q, :created_at, 'по дате', default_order: :desc) %>
</div>
	<%= render @category.advertisements.where("state = 'published' ") %>
</section>
<%= will_paginate @advertisements, renderer: 'BootstrapPaginationHelper::LinkRenderer'  %>
